<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

        <view
                android:layout_width="match_parent"
                android:layout_height="390dp"
                class="com.example.maciekwski.kalambury.PaintView"
                android:id="@+id/paint_view"
                android:layout_gravity="center_horizontal"
                android:background="#ffffffff"
                android:longClickable="true"
                />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:background="@color/screen_background_holo_light"
                android:id="@+id/drawing_settings"
                android:visibility="gone">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="34dp"
                    android:weightSum="1"
                    android:background="#79585858"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:id="@+id/linearLayout"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:id="@+id/button_black"
                        android:background="#ff000000"
                        android:layout_marginLeft="2dp"
                        android:onClick="onClick"
                        android:layout_marginRight="2dp"/>

                <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:id="@+id/button_blue"
                        android:background="#ff0016ff"
                        android:layout_marginLeft="2dp"
                        android:onClick="onClick"
                        android:layout_marginRight="2dp"/>

                <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:id="@+id/button_green"
                        android:background="#ff4fad3f"
                        android:layout_marginLeft="2dp"
                        android:onClick="onClick"
                        android:layout_marginRight="2dp"/>

                <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:id="@+id/button_red"
                        android:background="#ffff0000"
                        android:layout_marginLeft="2dp"
                        android:onClick="onClick"
                        android:layout_marginRight="2dp"/>

                <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:id="@+id/button_yellow"
                        android:layout_marginLeft="2dp"
                        android:onClick="onClick"
                        android:layout_marginRight="2dp"
                        android:background="#fffff700"/>

                <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:id="@+id/button_brown"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:onClick="onClick"
                        android:background="#ff793c1e"/>

                <Button
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:id="@+id/button_white"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:onClick="onClick"
                        android:background="#ffffffff"
                        android:clickable="true"/>

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/color_preview"
                        android:background="#ff000000"
                        android:layout_margin="5dp"/>
            </LinearLayout>

            <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:showDividers="beginning|middle|end"
                    android:id="@+id/tableLayout"
                    android:background="@color/screen_background_holo_light">

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <SeekBar
                            android:layout_width="222dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/size_bar"
                            android:layout_column="0"
                            android:max="50"/>

                    <TextView
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:text="@string/size1"
                            android:textSize="30dp"
                            android:id="@+id/text_size"
                            android:layout_column="1"
                            android:layout_gravity="center|left"
                            android:gravity="center"
                            android:width="60dp"/>

                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clear_text"
                            android:id="@+id/clear_button"
                            android:layout_gravity="center_horizontal"
                            android:onClick="onClear"
                            android:layout_column="3"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>

        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:id="@+id/scores_view"
                android:visibility="gone"
                android:background="@color/screen_background_holo_light"
                android:paddingTop="5dp"
                android:paddingRight="2dp"
                android:paddingLeft="4dp"
                >

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Gracz:"
                        android:id="@+id/text_player"
                        android:layout_column="0"
                        android:textSize="20dp"
                        android:singleLine="false"
                        android:paddingLeft="5dp"/>

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/score"
                        android:id="@+id/text_score"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:singleLine="false"
                        android:gravity="right"/>

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/round"
                        android:id="@+id/text_round"
                        android:layout_column="2"
                        android:textSize="20dp"
                        android:singleLine="false"
                        android:gravity="right"/>

            </TableRow>

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="0dp"
                    android:id="@+id/tableRow2">

                <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Gracz1"
                        android:id="@+id/player1"
                        android:layout_column="0"
                        android:textSize="18dp"
                        android:singleLine="false"
                        android:textColor="#e73c3c3c"
                        android:paddingLeft="10dp"/>

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/score_default"
                        android:id="@+id/score1"
                        android:layout_column="1"
                        android:textSize="18dp"
                        android:singleLine="false"
                        android:paddingLeft="0dp"
                        android:gravity="right"
                        android:textColor="#e73c3c3c"/>

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/round_default"
                        android:id="@+id/round1"
                        android:layout_column="2"
                        android:textSize="18dp"
                        android:singleLine="false"
                        android:paddingLeft="0dp"
                        android:gravity="right"
                        android:textColor="#e73c3c3c"/>
            </TableRow>

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/tableRow"
                    android:paddingLeft="0dp">

                <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Gracz2"
                        android:id="@+id/player2"
                        android:layout_column="0"
                        android:textSize="18dp"
                        android:singleLine="false"
                        android:textColor="#e73c3c3c"
                        android:paddingLeft="10dp"/>

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/score_default"
                        android:id="@+id/score2"
                        android:layout_column="1"
                        android:textSize="18dp"
                        android:singleLine="false"
                        android:paddingLeft="0dp"
                        android:gravity="right"
                        android:textColor="#e73c3c3c"/>

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/round_default"
                        android:id="@+id/round2"
                        android:layout_column="2"
                        android:textSize="18dp"
                        android:singleLine="false"
                        android:paddingLeft="0dp"
                        android:gravity="right"
                        android:textColor="#e73c3c3c"/>
            </TableRow>

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="0dp">

                <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Gracz3"
                        android:id="@+id/player3"
                        android:layout_column="0"
                        android:textSize="18dp"
                        android:singleLine="false"
                        android:textColor="#e73c3c3c"
                        android:paddingLeft="10dp"/>

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/score_default"
                        android:id="@+id/score3"
                        android:layout_column="1"
                        android:textSize="18dp"
                        android:singleLine="false"
                        android:paddingLeft="0dp"
                        android:gravity="right"
                        android:textColor="#e73c3c3c"/>

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/round_default"
                        android:id="@+id/round3"
                        android:layout_column="2"
                        android:textSize="18dp"
                        android:singleLine="false"
                        android:paddingLeft="0dp"
                        android:gravity="right"
                        android:textColor="#e73c3c3c"/>
            </TableRow>

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="0dp"
                    android:id="@+id/tableRow3">

                <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Gracz4"
                        android:id="@+id/player4"
                        android:layout_column="0"
                        android:textSize="18dp"
                        android:textColor="#e73c3c3c"
                        android:paddingLeft="10dp"/>

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/score_default"
                        android:id="@+id/score4"
                        android:layout_column="1"
                        android:textSize="18dp"
                        android:singleLine="false"
                        android:paddingLeft="0dp"
                        android:gravity="right"
                        android:textColor="#e73c3c3c"/>

                <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/round_default"
                        android:id="@+id/round4"
                        android:layout_column="2"
                        android:textSize="18dp"
                        android:singleLine="false"
                        android:paddingLeft="0dp"
                        android:gravity="right"
                        android:textColor="#e73c3c3c"/>
            </TableRow>

        </TableLayout>

    </FrameLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tu bÄ™dzie chat"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>